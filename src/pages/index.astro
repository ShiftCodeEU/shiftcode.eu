---
import { t, changeLanguage } from "i18next";
import Layout from "@components/layouts/MainLayout.astro";
import Logo from "@src/images/color2-white_logo_transparent_background.webp";
import LogoFull from "@src/images/base_logo_transparent_background.webp";

changeLanguage("en-US");
---

<Layout
	title={`${t("home.title", { ns: "pages" })} ${t("site.titleTemplate")}`}
	desc={t("site.desc")}
>
	<div class="mt-12 flex h-full w-full flex-col">
		<section class="w-full">
			<div
				class="mx-auto grid max-w-screen-xl px-4 py-8 lg:grid-cols-12 lg:gap-8 lg:py-16 xl:gap-0"
			>
				<div
					class="mr-auto flex flex-col gap-2 place-self-center lg:col-span-7"
				>
					<h1
						class="mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight text-white md:text-5xl xl:text-6xl"
					>
						{t("home.hero.title", { ns: "pages" })}
					</h1>
					<p
						class="mb-6 max-w-3xl font-light text-gray-200 md:text-lg lg:mb-8 lg:text-xl"
					>
						{t("home.hero.subtitle", { ns: "pages" })}
					</p>
					<div class="flex flex-col gap-2 lg:flex-row">
						<a
							href="#"
							class="inline-flex items-center justify-center rounded-lg border border-accentAlt bg-secondary px-5 py-3 text-center text-base font-medium text-accentAlt focus:ring-4 focus:ring-accentAlt hover:bg-accent"
						>
							Check out projects
							<svg
								class="ml-2 -mr-1 h-5 w-5"
								fill="currentColor"
								viewBox="0 0 20 20"
								xmlns="http://www.w3.org/2000/svg"
								><path
									fill-rule="evenodd"
									d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
									clip-rule="evenodd"></path></svg
							>
						</a>
						<a
							href="#"
							class="inline-flex items-center justify-center rounded-lg border border-accentAlt bg-secondary px-5 py-3 text-center text-base font-medium text-accentAlt focus:ring-4 focus:ring-accentAlt hover:bg-accent"
						>
							Check our Github
						</a>
					</div>
				</div>
				<div
					class="relative hidden lg:col-span-5 lg:mt-[-3rem] lg:flex"
				>
					<img
						src={Logo}
						alt="Shiftcode Developments"
						class="absolute my-auto opacity-100 transition-opacity duration-500 ease-linear hover:opacity-0"
					/>
					<img
						src={LogoFull}
						alt="Shiftcode Developments"
						class="absolute my-auto opacity-0 transition-opacity duration-500 ease-linear hover:opacity-100"
					/>
				</div>
			</div>
		</section>
	</div>
</Layout>
